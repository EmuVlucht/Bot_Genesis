# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration
# Pilih salah satu: mongodb atau sqlite
DB_TYPE=sqlite
# Jika menggunakan MongoDB:
MONGODB_URI=mongodb://localhost:27017/vaultverse
# Jika menggunakan SQLite:
SQLITE_PATH=./db/vaultverse.db

# JWT Authentication
# Generate dengan: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_64_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# AES-256 Encryption untuk password vault
# Generate dengan: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
AES_ENCRYPTION_KEY=your_32_byte_aes_encryption_key_change_this_in_production_256bit

# Security Settings
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800000

# Export/Import Encryption
EXPORT_ENCRYPTION_KEY=your_export_file_encryption_key_change_this_in_production

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true