# ============================================
# VAULTVERSE BACKEND ENVIRONMENT (.env)
# File ini harus ditempatkan di: server/.env
# ============================================

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Pilih tipe database (sqlite atau mongodb)
DB_TYPE=sqlite

# SQLite Configuration (Recommended untuk development)
SQLITE_PATH=./db/vaultverse.db

# MongoDB Configuration (Optional - uncomment jika menggunakan MongoDB)
# MONGODB_URI=mongodb://localhost:27017/vaultverse
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vaultverse?retryWrites=true&w=majority

# ============================================
# JWT AUTHENTICATION
# ============================================
# PENTING: Generate secret key yang kuat untuk production!
# Cara generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=e244b84411bd3570b375b5f8d85439040660e081f90dd58f6c2ea76065741cf5422f7b0506f8aec88c8fcd4a5b4b4a931d31061a24f5a55b16807127ff5c00bc
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# ENCRYPTION CONFIGURATION
# ============================================
# CRITICAL: AES-256 Encryption Key (harus tepat 32 bytes = 64 karakter hex)
# Cara generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# JANGAN UBAH KEY INI setelah ada data terenkripsi di database!
AES_ENCRYPTION_KEY=2af0f28a3673a1b23e58fbd7d677df4fc57b413bdc5fe13f26d8baf3eaf6bdd3

# Bcrypt Salt Rounds (10-12 untuk development, 12-14 untuk production)
BCRYPT_SALT_ROUNDS=12

# Export/Import Encryption Key (optional, jika kosong akan menggunakan AES_ENCRYPTION_KEY)
EXPORT_ENCRYPTION_KEY=b06994de1ea901b9b0e1a267b7a6e6691381ce46546155cc6a240284b691ca2e

# ============================================
# SECURITY SETTINGS
# ============================================
# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800000

# ============================================
# CORS SETTINGS
# ============================================
CORS_ORIGIN=http://localhost:3000

# Untuk multiple origins (production):
# CORS_ORIGIN=https://vaultverse.com,https://www.vaultverse.com,https://app.vaultverse.com

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ============================================
# ADDITIONAL SETTINGS
# ============================================
# Timezone
TZ=Asia/Jakarta

# ============================================
# ============================================